<% @ordered_items.each do |ordered_item| %>
  <tr>
    <td>
      <%= image_tag ordered_item.product.image.tiny %>
    </td>
    <td>
      <h4><%= ordered_item.product.name %></h4>
      <br>
      <p><%= ordered_item.product.description %></p>
    </td>
    <td>
      <%= humanized_money_with_symbol(ordered_item.product.price) %>
    </td>
    <%= ordered_item.quantity %>
    <td>
      <%= humanized_money_with_symbol(ordered_item.product.price * ordered_item.quantity) %>
    </td>
  </tr>
<% end %>