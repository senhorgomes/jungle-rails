<div class="jumbotron">
  <h1>Login</h1>
  <hr class="my-4">
  
  <%= form_tag '/login' do %>
    <div class="form-group">
      Email: <%= text_field_tag :email %>
      Password: <%= password_field_tag :password %>
      <%= submit_tag "Submit", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>